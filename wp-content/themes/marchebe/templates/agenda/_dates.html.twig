<h3 class="font-montserrat-semi-bold text-cta-light text-md border-bottom">
    Dates
</h3>
<div class="flex flex-col gap-2 mb-2">
    {% for dateEvent in event.dates %}
        <div class="font-montserrat-semi-bold text-cta-dark">

            {% if dateEvent.dateBegin %}
                {{ dateEvent.dateBegin.date|format_date('full') }}
            {% endif %}

            {% if dateEvent.dateRealBegin %}
                Du {{ dateEvent.dateRealBegin.date|format_date('full') }}
            {% endif %}

            {% if dateEvent.dateEnd %}
                au {{ dateEvent.dateEnd.date|format_date('full') }}
            {% endif %}

            <div class="flex flex-col gap-1 my-4">

                {% if dateEvent.dateRange %}
                    <span>{{ dateEvent.dateRange }}</span>
                {% endif %}

                {% if dateEvent.ouvertureHeure1 %}
                    <span>{{ dateEvent.ouvertureHeure1 }}</span>
                {% endif %}

                {% if dateEvent.fermetureHeure1 %}
                    <span>{{ dateEvent.fermetureHeure1 }}</span>
                {% endif %}

                {% if dateEvent.ouvertureHeure2 %}
                    <span>{{ dateEvent.ouvertureHeure2 }}</span>
                {% endif %}

                {% if dateEvent.fermetureHeure2 %}
                    <span>{{ dateEvent.fermetureHeure2 }}</span>
                {% endif %}

                {% if dateEvent.ouvertureDetails %}
                    <span>{{ dateEvent.ouvertureDetails|raw }}</span>
                {% endif %}

            </div>

        </div>
    {% endfor %}
</div>