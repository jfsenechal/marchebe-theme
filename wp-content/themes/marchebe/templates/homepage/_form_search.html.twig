  <form action="/" method="GET" role="search" class="">
    <label for="hero-search" class="sr-only">Rechercher sur le site</label>
    <div class="relative">
      <!-- Search Icon (decorative) -->
      <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none" aria-hidden="true">
        <i class="fas fa-search text-gray-700" aria-hidden="true"></i>
      </div>

      <!-- Search Input -->
      <input
          id="hero-search"
          name="s"
          type="search"
          autocomplete="off"
          placeholder="Que cherchez-vous ?"
          class="w-full py-3 pl-12 pr-16 md:pr-32 text-gray-900 placeholder:text-gray-700 bg-white rounded-full shadow-md focus:outline-none focus:ring-2 focus:ring-cta-dark transition-shadow"
      >

      <!-- Submit Button -->
      <button
          type="submit"
          class="cursor-pointer absolute inset-y-0 right-0 flex items-center px-4 md:px-6 bg-cta-dark text-white font-semibold rounded-r-full hover:bg-cta-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cta-dark transition-colors"
          aria-label="Rechercher"
          aria-roledescription="Search button"
      >
        <!-- Mobile: Icon only -->
        <span class="md:hidden" aria-hidden="true">
          <i class="fas fa-search text-white" aria-hidden="true"></i>
        </span>
        <!-- Desktop: Text only -->
        <span class="hidden md:inline">
          Rechercher
        </span>
      </button>
    </div>
  </form>