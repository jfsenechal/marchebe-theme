<section class="flex flex-col h-full bg-slate-50 rounded-2xl ">
    <h3 class="text-2xl md:text-3xl font-bold mb-6 text-slate-800 flex items-center gap-3">
        <span class="w-1 h-8 bg-cta-dark rounded-full"></span>
        Agenda
    </h3>
    <ul class="space-y-3 flex-1">
        {% for event in events %}
            <li class="{% if loop.index > 3 %}hidden md:block{% endif %}">
                <a
                        href="/tourisme/agenda-des-manifestations/manifestation/{{ event.codeCgt }}"
                        class="bg-white rounded-xl overflow-hidden flex border border-slate-200 hover:border-cta-light hover:shadow-md transition-all duration-200"
                >
                    <div
                            class="bg-cta-dark text-white p-3 md:p-4 flex flex-col items-center justify-center w-20 md:w-24 text-center flex-shrink-0">
                        <span class="text-2xl md:text-3xl font-bold leading-none">{{ event.shortCutDateEvent["day"] }}</span>
                        <span class="text-xs md:text-sm uppercase tracking-wide opacity-90">{{ event.shortCutDateEvent["month"] }}</span>
                    </div>
                    <div class="p-3 md:p-4 flex-1 overflow-hidden flex flex-col justify-center">
                        <h4 class="font-semibold text-sm md:text-base text-slate-800 line-clamp-2 leading-snug">{{ event.nom }}</h4>
                        <p class="text-xs md:text-sm text-slate-500 mt-1"><i class="fas fa-map-marker-alt mr-1 text-citoyen"></i> {{ event.locality }}</p>
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>
    <div class="mt-auto pt-6">
        <a href="/tourisme/agenda-des-manifestations/"
           class="inline-flex items-center gap-2 bg-cta-dark text-white font-semibold py-2.5 px-6 rounded-lg hover:bg-cta-light transition-colors">
            Tout l'agenda
            <i class="fas fa-arrow-right text-sm"></i>
        </a>
    </div>
</section>