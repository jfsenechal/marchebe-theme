<section class="bg-gradient-to-b from-slate-100 to-slate-50 py-16">
    <div class="container mx-auto px-4 md:px-6">
        <ul class="grid grid-cols-3 lg:grid-cols-[repeat(3,minmax(0,280px))] gap-4 lg:gap-8 justify-center align-center" id="widgets">
            {% for item in widgets %}
                <li>
                    <a
                            href="{{ item.url }}"
                            class="group p-4 md:p-6 rounded-xl hover:bg-white hover:shadow-lg transition-all duration-300 flex flex-col items-center text-center">
                        <div
                                class="w-16 h-16 md:w-24 md:h-24 rounded-full bg-white shadow-md group-hover:bg-cta-dark group-hover:shadow-lg transition-all duration-300 mb-3 md:mb-4 flex items-center justify-center">
                            <i class="{{ item.icon }} text-slate-700 text-2xl md:text-4xl transition-all duration-300 group-hover:text-white group-hover:scale-110"></i>
                        </div>
                        <h2 class="font-semibold text-sm text-slate-700 md:text-lg leading-tight">{{ item.name }}</h2>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</section>
