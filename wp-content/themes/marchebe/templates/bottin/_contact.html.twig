<div class="">
    <h3>Contact</h3>

    {% if fiche.nom %}
        <div class="m-4">
            {{ fiche.civilite }} {{ fiche.nom }} {{ fiche.prenom }}
        </div>
    {% endif %}

    <!-- Phone -->
    {% set phones = fichePhones(fiche) %}
    {% if phones|length > 0 %}
        {% for phone in phones %}
            <div
                    class="flex items-center group">
                <div class="flex-shrink-0 w-6 h-6">
                    <svg class="w-6 h-6 text-gray-400 dark:text-gray-500 group-hover:text-teal-500 transition-colors duration-200"
                         fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <a href="tel:{{ phone }}"
                       class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-200">
                        {{ phone }}
                    </a>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <!-- email -->
    {% set emails = ficheEmails(fiche) %}
    {% if emails|length > 0 %}

        {% for email in emails %}
            <div class="flex items-center group">
                <div class="flex-shrink-0 w-6 h-6">
                    <svg class="w-6 h-6 text-gray-400 dark:text-gray-500 group-hover:text-teal-500 transition-colors duration-200"
                         fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <a href="mailto:{{ email }}"
                       class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-200">
                        {{ email }}
                    </a>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <!-- Website -->
    {% if fiche.website %}
        <div class="flex items-center group">
            <div class="flex-shrink-0 w-6 h-6">
                <svg class="w-6 h-6 text-gray-400 dark:text-gray-500 group-hover:text-teal-500 transition-colors duration-200"
                     fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9V3m0 18a9 9 0 009-9m-9 9a9 9 0 00-9-9"></path>
                </svg>
            </div>
            <div class="ml-4">
                <a :href="fiche.website" target="_blank" rel="noopener noreferrer"
                   class="text-gray-700 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors duration-200 break-all">
                    {{ fiche.website }}
                </a>
            </div>
        </div>
    {% endif %}
</div>