<section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-10">En ce moment sur Marche</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Related Article Card 1 -->
            {% for event in events %}
                <a href="{{ event.url }}"
                   class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    <img class="h-48 w-full object-cover"
                         src="{% if event.images|length > 0 %} {{ event.images[0] }} {% else %} 'https://pivotmedia.tourismewallonie.be/OTH-A0-00UE-0HH1/OTH-A0-00UE-0HH1.jpg' {% endif %}"
                         alt="{{ event.nom|slug }}">
                    <div class="p-6">
                        <p class="text-sm text-gray-500 mb-1">
                            {{ event.shortCutDateEvent["day"] }} {{ event.shortCutDateEvent["month"] }} {{ event.shortCutDateEvent["year"] }}
                        </p>
                        <h3 class="font-bold text-lg text-gray-900 group-hover:text-cta-dark transition-colors">
                            {{ event.nom }}
                        </h3>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</section>